<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_bg"
    android:orientation="vertical">

    <include layout="@layout/header_layout"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin_5"
            android:id="@+id/statusLinearLayout"
            android:visibility="gone"
            >

            <TextView
                style="@style/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attendance_status" />

            <TextView
                android:id="@+id/statusTV"
                style="@style/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Present" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10">
            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardViewExpense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_5">

                        <TextView
                            style="@style/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/in_time"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_5"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/textView5"
                            style="@style/textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="@string/marked_time" />

                        <TextView
                            android:id="@+id/markedInDateTV"
                            style="@style/textViewYellow"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="07-10-2017" />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="0.05"
                            android:background="@android:color/transparent" />

                        <TextView
                            android:id="@+id/markedInTimeTV"
                            style="@style/textViewYellow"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="09:45 PM" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_5"
                        android:weightSum="1"
                        android:id="@+id/requestedInTimeLl">

                        <TextView
                            style="@style/textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:layout_weight="0.3"
                            android:text="@string/requested_time" />

                        <LinearLayout
                            android:id="@+id/ll_from_date"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/margin_40"
                            android:layout_weight="0.3"
                            android:background="@drawable/rounded_corne_background_blue_dark"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/padding_mini"
                            android:paddingRight="@dimen/padding_default">

                            <ImageView
                                android:id="@+id/imageView1"
                                android:layout_width="@dimen/margin_30"
                                android:layout_height="wrap_content"
                                android:layout_margin="2dp"
                                android:padding="2dp"
                                android:src="@drawable/icon_callender" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/padding_default"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_in_day"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/date"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/margin_12" />

                                <TextView
                                    android:id="@+id/tv_in_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--/--/----"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/margin_12" />
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="0.05"
                            android:background="@android:color/transparent" />

                        <LinearLayout
                            android:id="@+id/ll_start_time"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/margin_40"
                            android:layout_weight="0.3"
                            android:background="@drawable/rounded_corne_background_blue_dark"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/padding_mini"
                            android:paddingRight="@dimen/padding_default">

                            <ImageView
                                android:layout_width="@dimen/margin_30"
                                android:layout_height="@dimen/margin_35"
                                android:layout_margin="2dp"
                                android:padding="2dp"
                                android:src="@drawable/clock1" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/padding_default"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/time"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/margin_12" />

                                <TextView
                                    android:id="@+id/tv_in_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="--:-- AM"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/margin_12" />
                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10">
                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/margin_10"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="2dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_5">

                            <TextView
                                style="@style/textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/out_time"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/margin_5"
                            android:weightSum="1">

                            <TextView
                                style="@style/textView"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:text="@string/marked_time" />

                            <TextView
                                android:id="@+id/markedOutDateTV"
                                style="@style/textViewYellow"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:text="07-10-2017" />
                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="0.05"
                                android:background="@android:color/transparent" />

                            <TextView
                                android:id="@+id/markedOutTimeTV"
                                style="@style/textViewYellow"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:text="09:45 PM" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/margin_5"
                            android:weightSum="1"
                            android:id="@+id/requestedOutTimeLl">

                            <TextView
                                style="@style/textView"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:layout_weight="0.3"
                                android:text="@string/requested_time" />

                            <LinearLayout
                                android:id="@+id/ll_out_date"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/margin_40"
                                android:layout_weight="0.3"
                                android:background="@drawable/rounded_corne_background_blue_dark"
                                android:orientation="horizontal"
                                android:paddingLeft="@dimen/padding_mini"
                                android:paddingRight="@dimen/padding_default">

                                <ImageView
                                    android:layout_width="@dimen/margin_30"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="2dp"
                                    android:padding="2dp"
                                    android:src="@drawable/icon_callender" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="@dimen/padding_default"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_out_day"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/date"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/margin_12" />

                                    <TextView
                                        android:id="@+id/tv_out_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="--/--/----"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/margin_12" />
                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="0.05"
                                android:background="@android:color/transparent" />

                            <LinearLayout
                                android:id="@+id/ll_out_time"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/margin_40"
                                android:layout_weight="0.3"
                                android:background="@drawable/rounded_corne_background_blue_dark"
                                android:orientation="horizontal"
                                android:paddingLeft="@dimen/padding_mini"
                                android:paddingRight="@dimen/padding_default">

                                <ImageView
                                    android:layout_width="@dimen/margin_30"
                                    android:layout_height="@dimen/margin_35"
                                    android:layout_margin="2dp"
                                    android:padding="2dp"
                                    android:src="@drawable/clock1" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="@dimen/padding_default"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/time"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/margin_12" />

                                    <TextView
                                        android:id="@+id/tv_out_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="--:-- AM"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/margin_12" />
                                </LinearLayout>
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

        </LinearLayout>
        <include
            android:id="@+id/remarksLinearLayout"
            layout="@layout/remarks_edittext_layout"></include>
    </LinearLayout>

    <include layout="@layout/action_button_layout" android:id="@+id/buttonLinearLayout"></include>

</LinearLayout>
