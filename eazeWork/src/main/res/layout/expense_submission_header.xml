<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/fl_actionBarContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_dark">

        <LinearLayout

            android:visibility="visible"
            android:id="@+id/rl_edit_team_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.3"
                android:id="@+id/cancelLinearLayout">
            <ImageView
                android:id="@+id/closeIV"
                android:padding="@dimen/margin_10"
                android:layout_alignParentRight="true"
                android:src="@drawable/close_icon"
                android:layout_marginStart="@dimen/margin_15"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:text="Cancel"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/text_25"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.3"
                android:id="@+id/draftLinearLayout">
                <ImageView
                    android:id="@+id/draftIV"
                    android:padding="@dimen/margin_10"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/help"
                    android:layout_marginStart="@dimen/margin_15"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:text="Draft"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/text_25"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.3"
                android:id="@+id/doneLinearLayout">
                <ImageView
                    android:id="@+id/ibRight"
                    android:padding="@dimen/margin_10"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_right"
                    android:layout_marginStart="@dimen/margin_15"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:text="Done"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/text_25"/>
            </LinearLayout>
           <!-- <TextView
                android:id="@+id/tv_header_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:padding="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_20"
                android:text="Draft"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ibWrong"
                android:padding="@dimen/margin_10"
                android:layout_alignParentLeft="true"
                android:src="@drawable/close_icon"
                android:layout_marginEnd="@dimen/margin_15"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />-->
        </LinearLayout>

    </FrameLayout>
</LinearLayout>

